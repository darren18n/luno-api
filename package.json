    "csurf": "1.11.0",
    "helmet": "4.6.0",
    "http-status-codes": "2.1.4",
    "ts-node": "10.0.0",
    "ts-node-dev": "1.1.8",
    "tsconfig-paths": "3.9.0",
    "tslib": "2.3.0",
    "tslint": "6.1.3",
